---
import Layout from "../layouts/Layout.astro";

const seoData = {
    title: "About Debugro - Professional Software Development Company | Founded by Mohamed Rifkan",
    description: "Learn about Debugro, a leading software development company founded by Mohamed Rifkan. Our expert team delivers innovative web development, mobile apps, and cloud solutions with 5+ years of industry experience.",
    keywords: "Debugro about, software development company, Mohamed Rifkan founder, debugro team, web development agency, mobile app development, cloud solutions, founder of debugro, software engineering company, professional development team",
    canonicalUrl: "https://debugro.com/about",
    image: "https://debugro.com/rifkan-200.jpeg",
    author: "Debugro Team",
    type: "organization"
};

const team = [
    {
        name: "Mohamed Rifkan",
        role: "Founder & Lead Engineer",
        image: "/rifkan-200.jpeg",
        bio: "Passionate software engineer with 5+ years of experience in building scalable web applications and cloud solutions. Founded Debugro to deliver innovative software solutions that drive business growth.",
        skills: ["Full Stack Development", "Cloud Architecture", "Web Development", "Mobile Development", "DevOps"],
        social: {
            linkedin: "https://www.linkedin.com/in/mohamed-rifkan-b38218214/",
            github: "https://github.com/rifkan-py",
            twitter: "#"
        }
    }
];




---

<Layout {...seoData}>
    <!-- Enhanced SEO and Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Mohamed Rifkan",
        "jobTitle": "Founder & Lead Developer",
        "worksFor": {
            "@type": "Organization",
            "name": "Debugro",
            "url": "https://debugro.com",
            "logo": "https://debugro.com/logo.png",
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Galle",
                "addressCountry": "Sri Lanka"
            }
        },
        "image": "https://avatars.githubusercontent.com/u/59793466?v=4",
        "url": "https://debugro.com/about",
        "sameAs": [
            "https://www.linkedin.com/in/mohamed-rifkan-b38218214/",
            "https://github.com/rifkan-py"
        ],
        "description": "Founder and Lead Developer of Debugro with 5+ years of experience in full-stack development, cloud architecture, and innovative software solutions.",
        "knowsAbout": [
            "Full Stack Development",
            "Cloud Architecture", 
            "Web Development",
            "Mobile Development",
            "DevOps",
            "React",
            "Node.js",
            "JavaScript",
            "TypeScript",
            "Python"
        ],
        "alumniOf": "Software Development",
        "nationality": "Sri Lankan",
        "birthPlace": "Sri Lanka"
    })} />

    <!-- Company Organization Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Debugro",
        "url": "https://debugro.com",
        "logo": "https://debugro.com/logo.png",
        "founder": {
            "@type": "Person",
            "name": "Mohamed Rifkan"
        },
        "foundingDate": "2023",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Galle",
            "addressCountry": "Sri Lanka"
        },
        "description": "Debugro is a software development company founded by Mohamed Rifkan, specializing in innovative software solutions, web development, mobile applications, and cloud architecture.",
        "serviceArea": "Worldwide",
        "knowsAbout": [
            "Software Development",
            "Web Development", 
            "Mobile App Development",
            "Cloud Solutions",
            "Custom Software",
            "Digital Transformation"
        ]
    })} />

    <main class="bg-gradient-to-b from-[var(--color-primary-dark)] to-[#00151e]">
        <!-- Hero Section -->
        <section class="relative py-20 overflow-hidden" itemscope itemtype="https://schema.org/Organization">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="max-w-3xl mx-auto text-center">
                    <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
                        About <span class="text-[var(--color-primary)]" itemprop="name">Debugro</span>
                    </h1>
                    <p class="text-xl text-gray-300 mb-8" itemprop="description">
                        A professional software development company founded by <span itemprop="founder" itemscope itemtype="https://schema.org/Person"><span itemprop="name">Mohamed Rifkan</span></span>. 
                        We specialize in creating innovative software solutions that drive business growth, 
                        serving clients across Sri Lanka and globally with our expert development team.
                    </p>
                    <meta itemprop="url" content="https://debugro.com" />
                    <meta itemprop="foundingDate" content="2023" />
                    <meta itemprop="address" content="Sri Lanka" />
                </div>
            </div>
            <!-- Background Elements -->
            <div class="absolute top-0 left-1/4 w-64 h-64 bg-[var(--color-primary)]/10 rounded-full blur-3xl"></div>
            <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-[var(--color-primary)]/10 rounded-full blur-3xl"></div>
        </section>

        <!-- Story Section -->
        <section class="py-16">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="max-w-4xl mx-auto text-center">
                    <h2 class="text-3xl font-bold text-white mb-8">Our Story</h2>
                    <div class="space-y-6 text-lg text-gray-300">
                        <p>
                            Founded in 2023, Debugro emerged from our founder's passion to revolutionize
                            software development in Sri Lanka. Our company began with a simple
                            belief: that exceptional software should be accessible to businesses
                            of all sizes.
                        </p>
                        <p>
                            Today, our team is proud to be at the forefront of technological
                            innovation, helping businesses across the globe achieve their digital
                            transformation goals through personalized, high-quality solutions.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Mission & Vision -->
        <section class="py-20 bg-[var(--color-primary-dark)]/30 relative">
             <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[var(--color-primary)]/5 to-transparent opacity-30"></div>
            <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="grid md:grid-cols-2 gap-12">
                    <div class="bg-[var(--color-primary-dark)]/60 backdrop-blur-md p-8 rounded-2xl border border-[var(--color-primary)]/10 hover:border-[var(--color-primary)]/20 transition-all duration-300">
                        <div class="w-12 h-12 bg-blue-500/10 rounded-xl flex items-center justify-center text-blue-400 mb-6">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
                        </div>
                        <h3 class="text-2xl font-bold text-white mb-4">Our Mission</h3>
                        <p class="text-gray-400 leading-relaxed">
                            To empower businesses with innovative software solutions that drive
                            growth, efficiency, and digital transformation while maintaining the
                            highest standards of quality and security.
                        </p>
                    </div>
                    <div class="bg-[var(--color-primary-dark)]/60 backdrop-blur-md p-8 rounded-2xl border border-[var(--color-primary)]/10 hover:border-[var(--color-primary)]/20 transition-all duration-300">
                        <div class="w-12 h-12 bg-purple-500/10 rounded-xl flex items-center justify-center text-purple-400 mb-6">
                             <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/><circle cx="12" cy="12" r="3"/></svg>
                        </div>
                        <h3 class="text-2xl font-bold text-white mb-4">Our Vision</h3>
                        <p class="text-gray-400 leading-relaxed">
                            To become a leading software development company in Sri Lanka,
                            recognized globally for innovative solutions, technical
                            excellence, and commitment to client success.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Values Section -->
        <section class="py-20 relative overflow-hidden">
            <div class="absolute inset-0 bg-[var(--color-primary-dark)]/30 skew-y-3 transform origin-bottom-left"></div>
            <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-3xl font-bold text-white mb-4">Our Core Values</h2>
                    <p class="text-gray-400">The principles that guide our every decision and innovation.</p>
                </div>
                
                <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    {/* Innovation */}
                    <div class="bg-[var(--color-primary-dark)]/60 backdrop-blur-md p-6 rounded-2xl border border-[var(--color-primary)]/10 hover:border-[var(--color-primary)]/30 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:shadow-[var(--color-primary)]/10 group">
                        <div class="w-12 h-12 bg-blue-500/10 rounded-xl flex items-center justify-center text-blue-400 mb-6 group-hover:bg-blue-500/20 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/>
                                <path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/>
                                <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/>
                                <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-3">Innovation</h3>
                        <p class="text-gray-400 text-sm leading-relaxed">Pushing boundaries with cutting-edge solutions and forward-thinking strategies.</p>
                    </div>

                    {/* Quality */}
                    <div class="bg-[var(--color-primary-dark)]/60 backdrop-blur-md p-6 rounded-2xl border border-[var(--color-primary)]/10 hover:border-[var(--color-primary)]/30 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:shadow-[var(--color-primary)]/10 group">
                        <div class="w-12 h-12 bg-purple-500/10 rounded-xl flex items-center justify-center text-purple-400 mb-6 group-hover:bg-purple-500/20 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
                                <path d="m9 12 2 2 4-4"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-3">Quality</h3>
                        <p class="text-gray-400 text-sm leading-relaxed">Delivering excellence in every line of code with rigorous testing and standards.</p>
                    </div>

                    {/* Collaboration */}
                    <div class="bg-[var(--color-primary-dark)]/60 backdrop-blur-md p-6 rounded-2xl border border-[var(--color-primary)]/10 hover:border-[var(--color-primary)]/30 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:shadow-[var(--color-primary)]/10 group">
                        <div class="w-12 h-12 bg-green-500/10 rounded-xl flex items-center justify-center text-green-400 mb-6 group-hover:bg-green-500/20 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                                <circle cx="9" cy="7" r="4"/>
                                <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-3">Collaboration</h3>
                        <p class="text-gray-400 text-sm leading-relaxed">Working together with our clients to achieve exceptional and lasting results.</p>
                    </div>

                    {/* Integrity */}
                    <div class="bg-[var(--color-primary-dark)]/60 backdrop-blur-md p-6 rounded-2xl border border-[var(--color-primary)]/10 hover:border-[var(--color-primary)]/30 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:shadow-[var(--color-primary)]/10 group">
                        <div class="w-12 h-12 bg-red-500/10 rounded-xl flex items-center justify-center text-red-400 mb-6 group-hover:bg-red-500/20 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect width="18" height="11" x="3" y="11" rx="2" ry="2"/>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-3">Integrity</h3>
                        <p class="text-gray-400 text-sm leading-relaxed">Building trust through transparency, honesty, and ethical practices.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Team Section -->
        <section class="py-20 bg-[var(--color-primary-dark)]/30">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-3xl font-bold text-white mb-4">Meet the Team</h2>
                    <p class="text-gray-400">The talented individuals behind our success.</p>
                </div>
                <div class="flex justify-center">
                    <div class="max-w-md w-full">
                    {team.map(member => (
                        <article class="bg-[var(--color-primary-dark)]/60 backdrop-blur-md rounded-2xl overflow-hidden border border-[var(--color-primary)]/10 hover:border-[var(--color-primary)]/30 transition-all duration-300 group hover:shadow-xl hover:shadow-[var(--color-primary)]/10" 
                                 itemscope itemtype="https://schema.org/Person">
                            <div class="aspect-square overflow-hidden relative">
                                <div class="absolute inset-0 bg-gradient-to-t from-[var(--color-primary-dark)] to-transparent opacity-0 group-hover:opacity-60 transition-opacity duration-300 z-10"></div>
                                <img
                                    src={member.image}
                                    alt={`${member.name} - ${member.role} at Debugro, Software Engineer from Sri Lanka`}
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                    itemprop="image"
                                    loading="lazy"
                                    width="400"
                                    height="400"
                                />
                            </div>
                            <div class="p-8">
                                <h3 class="text-2xl font-bold text-white mb-1" itemprop="name">{member.name}</h3>
                                <p class="text-[var(--color-primary)] font-medium mb-4" itemprop="jobTitle">{member.role}</p>
                                <p class="text-gray-400 mb-6 leading-relaxed" itemprop="description">{member.bio}</p>
                                <div class="flex flex-wrap gap-2 mb-8">
                                    {member.skills.map(skill => (
                                        <span class="px-3 py-1 bg-[var(--color-primary)]/10 text-[var(--color-primary-light)] border border-[var(--color-primary)]/20 rounded-full text-xs font-medium" itemprop="knowsAbout">
                                            {skill}
                                        </span>
                                    ))}
                                </div>
                                <div class="flex gap-4 pt-4 border-t border-[var(--color-primary)]/10">
                                    <a href={member.social.linkedin}
                                        class="text-gray-500 hover:text-[#0077b5] transition-colors p-2 hover:bg-white/5 rounded-full"
                                        target="_blank" rel="noopener noreferrer"
                                        itemprop="sameAs"
                                        aria-label={`${member.name} LinkedIn Profile`}>
                                        <span class="sr-only">LinkedIn</span>
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                        </svg>
                                    </a>
                                    <a href={member.social.github}
                                        class="text-gray-500 hover:text-white transition-colors p-2 hover:bg-white/5 rounded-full"
                                        target="_blank" rel="noopener noreferrer"
                                        itemprop="sameAs"
                                        aria-label={`${member.name} GitHub Profile`}>
                                        <span class="sr-only">GitHub</span>
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                            <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
                                        </svg>
                                    </a>
                                    <a href={member.social.twitter}
                                        class="text-gray-500 hover:text-[#1DA1F2] transition-colors p-2 hover:bg-white/5 rounded-full"
                                        target="_blank" rel="noopener noreferrer"
                                        itemprop="sameAs"
                                        aria-label={`${member.name} Twitter Profile`}>
                                        <span class="sr-only">Twitter</span>
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                                        </svg>
                                    </a>
                                </div>
                                
                                <!-- Hidden metadata for SEO -->
                                <meta itemprop="url" content="https://debugro.com/about" />
                                <meta itemprop="nationality" content="Sri Lankan" />
                                <div itemprop="worksFor" itemscope itemtype="https://schema.org/Organization" style="display: none;">
                                    <meta itemprop="name" content="Debugro" />
                                    <meta itemprop="url" content="https://debugro.com" />
                                </div>
                            </div>
                        </article>
                    ))}
                </div>
            </div>
        </section>

        <!-- Development Approach (Animated) -->
        <section class="py-24 relative overflow-hidden">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="text-center max-w-3xl mx-auto mb-20">
                    <h2 class="text-3xl font-bold text-white mb-4">Our Process</h2>
                    <p class="text-gray-400">From concept to deployment, we follow a rigorous lifecycle ensuring quality and speed.</p>
                </div>
                
                <div class="relative hidden lg:block">
                    <!-- SVG Path Animation -->
                    <svg class="absolute top-0 left-0 w-full h-full pointer-events-none z-0" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" viewBox="0 0 1000 200">
                        <path class="path-line" d="M100,100 C250,100 250,100 350,100 C450,100 450,100 550,100 C650,100 650,100 850,100" fill="none" stroke="url(#gradient)" stroke-width="4" stroke-linecap="round" stroke-dasharray="1000" stroke-dashoffset="1000" />
                        <defs>
                            <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="0%">
                                <stop offset="0%" stop-color="var(--color-primary-dark)" stop-opacity="0.2" />
                                <stop offset="50%" stop-color="var(--color-primary)" />
                                <stop offset="100%" stop-color="var(--color-secondary)" />
                            </linearGradient>
                        </defs>
                    </svg>

                    <div class="grid grid-cols-4 gap-4 relative z-10">
                        <!-- Step 1: Discovery -->
                        <div class="relative group">
                            <div class="w-20 h-20 mx-auto bg-[var(--color-primary-dark)] rounded-full border-2 border-[var(--color-primary)]/30 group-hover:border-[var(--color-primary)] flex items-center justify-center transition-all duration-300 shadow-lg shadow-[var(--color-primary)]/10 z-10 relative">
                                <svg class="w-8 h-8 text-[var(--color-primary)] group-hover:scale-110 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                                </svg>
                            </div>
                            <div class="text-center mt-6">
                                <h3 class="text-white font-bold text-lg mb-2">Discovery</h3>
                                <p class="text-gray-400 text-sm">We dive deep into your requirements and business goals.</p>
                            </div>
                        </div>

                        <!-- Step 2: Planning -->
                        <div class="relative group mt-12">
                            <div class="w-20 h-20 mx-auto bg-[var(--color-primary-dark)] rounded-full border-2 border-[var(--color-primary)]/30 group-hover:border-[var(--color-primary)] flex items-center justify-center transition-all duration-300 shadow-lg shadow-[var(--color-primary)]/10 z-10 relative">
                                <svg class="w-8 h-8 text-[var(--color-primary)] group-hover:scale-110 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                                </svg>
                            </div>
