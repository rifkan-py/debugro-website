<script>
    // Email verification functionality
    document.addEventListener('DOMContentLoaded', function() {
        const newsletterForm = document.getElementById('newsletter-form');
        const verificationModal = document.getElementById('verification-modal');
        const verificationForm = document.getElementById('verification-form');
        const verificationSuccess = document.getElementById('verification-success');
        const emailInput = document.getElementById('email-input');
        const verificationEmailSpan = document.getElementById('verification-email');
        const verificationCodeInput = document.getElementById('verification-code');
        const subscribeBtn = document.getElementById('subscribe-btn');
        const verifyBtn = document.getElementById('verify-btn');
        const cancelBtn = document.getElementById('cancel-verification');
        const resendBtn = document.getElementById('resend-code');
        const closeModalBtn = document.getElementById('close-modal');

        let userEmail = '';
        let resendTimer = 0;
        let resendInterval;

        // Newsletter form submission
        newsletterForm?.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const email = (emailInput as HTMLInputElement)?.value.trim();
            if (!email) return;

            userEmail = email;
            
            // Show loading state
            toggleButtonLoading(subscribeBtn, true, 'Sending...');
            
            try {
                // Simulate API call to send verification code
                await sendVerificationCode(email);
                
                // Show verification modal
                showVerificationModal(email);
                
                // Reset newsletter form loading state
                toggleButtonLoading(subscribeBtn, false, 'Subscribe');
                
            } catch (error) {
                console.error('Error sending verification code:', error);
                // Show error message (you can implement toast notifications here)
                alert('Failed to send verification code. Please try again.');
                toggleButtonLoading(subscribeBtn, false, 'Subscribe');
            }
        });

        // Verification form submission
        verificationForm?.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const code = (verificationCodeInput as HTMLInputElement)?.value.trim();
            if (!code || code.length !== 6) {
                alert('Please enter a valid 6-digit verification code.');
                return;
            }
            
            // Show loading state
            toggleButtonLoading(verifyBtn, true, 'Verifying...');
            
            try {
                // Simulate API call to verify code
                const isValid = await verifyCode(userEmail, code);
                
                if (isValid) {
                    // Show success state
                    verificationForm.classList.add('hidden');
                    verificationSuccess?.classList.remove('hidden');
                } else {
                    alert('Invalid verification code. Please try again.');
                }
                
                toggleButtonLoading(verifyBtn, false, 'Verify');
                
            } catch (error) {
                console.error('Error verifying code:', error);
                alert('Failed to verify code. Please try again.');
                toggleButtonLoading(verifyBtn, false, 'Verify');
            }
        });

        // Cancel verification
        cancelBtn?.addEventListener('click', function() {
            closeVerificationModal();
        });

        // Close modal after success
        closeModalBtn?.addEventListener('click', function() {
            closeVerificationModal();
            // Reset newsletter form
            (newsletterForm as HTMLFormElement)?.reset();
        });

        // Resend code
        resendBtn?.addEventListener('click', async function() {
            if (resendTimer > 0) return;
            
            try {
                await sendVerificationCode(userEmail);
                startResendTimer();
            } catch (error) {
                console.error('Error resending code:', error);
                alert('Failed to resend verification code. Please try again.');
            }
        });

        // Close modal when clicking outside
        verificationModal?.addEventListener('click', function(e) {
            if (e.target === verificationModal) {
                closeVerificationModal();
            }
        });

        // Auto-format verification code input
        verificationCodeInput?.addEventListener('input', function(e) {
            const target = e.target as HTMLInputElement;
            let value = target.value.replace(/\D/g, '');
            if (value.length > 6) value = value.slice(0, 6);
            target.value = value;
        });

        // Functions
        function showVerificationModal(email) {
            verificationEmailSpan.textContent = email;
            verificationModal?.classList.remove('hidden');
            verificationModal?.classList.add('flex');
            verificationCodeInput?.focus();
            startResendTimer();
        }

        function closeVerificationModal() {
            verificationModal?.classList.add('hidden');
            verificationModal?.classList.remove('flex');
            verificationForm?.classList.remove('hidden');
            verificationSuccess?.classList.add('hidden');
            (verificationCodeInput as HTMLInputElement).value = '';
            clearResendTimer();
        }

        function toggleButtonLoading(button, isLoading, text) {
            if (!button) return;
            
            const btnText = button.querySelector('#btn-text') || button.querySelector('#verify-btn-text');
            const btnLoading = button.querySelector('#btn-loading') || button.querySelector('#verify-btn-loading');
            
            if (isLoading) {
                button.disabled = true;
                btnText?.classList.add('hidden');
                btnLoading?.classList.remove('hidden');
            } else {
                button.disabled = false;
                btnText?.classList.remove('hidden');
                btnLoading?.classList.add('hidden');
                if (btnText) btnText.textContent = text;
            }
        }

        function startResendTimer() {
            resendTimer = 60;
            (resendBtn as HTMLButtonElement).disabled = true;
            resendBtn.textContent = `Resend in ${resendTimer}s`;
            
            resendInterval = setInterval(() => {
                resendTimer--;
                if (resendTimer > 0) {
                    resendBtn.textContent = `Resend in ${resendTimer}s`;
                } else {
                    clearResendTimer();
                }
            }, 1000);
        }

        function clearResendTimer() {
            if (resendInterval) {
                clearInterval(resendInterval);
                resendInterval = null;
            }
            resendTimer = 0;
            (resendBtn as HTMLButtonElement).disabled = false;
            resendBtn.textContent = "Didn't receive the code? Resend";
        }

        // Simulate API functions (replace with actual API calls)
        async function sendVerificationCode(email) {
            // Simulate API delay
            await new Promise(resolve => setTimeout(resolve, 1500));
            
            // Here you would make an actual API call to your backend
            // Example: 
            // const response = await fetch('/api/send-verification', {
            //     method: 'POST',
            //     headers: { 'Content-Type': 'application/json' },
            //     body: JSON.stringify({ email })
            // });
            // if (!response.ok) throw new Error('Failed to send verification code');
            
            console.log('Verification code sent to:', email);
            return true;
        }

        async function verifyCode(email, code) {
            // Simulate API delay
            await new Promise(resolve => setTimeout(resolve, 1000));
            
            // Here you would make an actual API call to your backend
            // Example:
            // const response = await fetch('/api/verify-email', {
            //     method: 'POST',
            //     headers: { 'Content-Type': 'application/json' },
            //     body: JSON.stringify({ email, code })
            // });
            // if (!response.ok) throw new Error('Failed to verify code');
            // return response.json();
            
            // For demo purposes, accept any 6-digit code
            console.log('Verifying code:', code, 'for email:', email);
            return code.length === 6;
        }
    });
