---
import Layout from "../layouts/Layout.astro";

const seoData = {
    title: "About Mohamed Rifkan - Founder & Lead Developer at Debugro | Software Development Expert",
    description: "Meet Mohamed Rifkan, Founder and Lead Developer of Debugro. 5+ years of experience in full-stack development, cloud architecture, and innovative software solutions in Sri Lanka.",
    keywords: "Mohamed Rifkan, Debugro founder, software developer Sri Lanka, full stack developer, lead developer, cloud architecture expert, React developer, Node.js developer, mobile app developer, DevOps engineer",
    canonicalUrl: "https://debugro.com/about",
    image: "https://avatars.githubusercontent.com/u/59793466?v=4",
    author: "Mohamed Rifkan",
    type: "profile"
};

const team = [
    {
        name: "Mohamed Rifkan",
        role: "Founder & Lead Developer",
        image: "https://avatars.githubusercontent.com/u/59793466?v=4",
        bio: "Full-stack developer with 5+ years of experience in building scalable applications. Expertise in React, Node.js, and cloud architecture.",
        skills: ["Full Stack Development", "Cloud Architecture", "Web Development", "Mobile Development", "DevOps"],
        social: {
            linkedin: "https://www.linkedin.com/in/mohamed-rifkan-b38218214/",
            github: "https://github.com/rifkan-py",
            twitter: "#"
        }
    }
];

const values = [
    {
        title: "Innovation",
        icon: "üöÄ",
        description: "Pushing boundaries with cutting-edge solutions"
    },
    {
        title: "Quality",
        icon: "‚ú®",
        description: "Delivering excellence in every line of code"
    },
    {
        title: "Collaboration",
        icon: "ü§ù",
        description: "Working together to achieve exceptional results"
    },
    {
        title: "Integrity",
        icon: "üéØ",
        description: "Building trust through transparency and honesty"
    }
];


---

<Layout {...seoData}>
    <!-- Enhanced SEO and Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Mohamed Rifkan",
        "jobTitle": "Founder & Lead Developer",
        "worksFor": {
            "@type": "Organization",
            "name": "Debugro",
            "url": "https://debugro.com",
            "logo": "https://debugro.com/logo.png",
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Galle",
                "addressCountry": "Sri Lanka"
            }
        },
        "image": "https://avatars.githubusercontent.com/u/59793466?v=4",
        "url": "https://debugro.com/about",
        "sameAs": [
            "https://www.linkedin.com/in/mohamed-rifkan-b38218214/",
            "https://github.com/rifkan-py"
        ],
        "description": "Founder and Lead Developer of Debugro with 5+ years of experience in full-stack development, cloud architecture, and innovative software solutions.",
        "knowsAbout": [
            "Full Stack Development",
            "Cloud Architecture", 
            "Web Development",
            "Mobile Development",
            "DevOps",
            "React",
            "Node.js",
            "JavaScript",
            "TypeScript",
            "Python"
        ],
        "alumniOf": "Software Development",
        "nationality": "Sri Lankan",
        "birthPlace": "Sri Lanka"
    })} />

    <!-- Company Organization Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Debugro",
        "url": "https://debugro.com",
        "logo": "https://debugro.com/logo.png",
        "founder": {
            "@type": "Person",
            "name": "Mohamed Rifkan"
        },
        "foundingDate": "2023",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Galle",
            "addressCountry": "Sri Lanka"
        },
        "description": "Debugro is a software development company founded by Mohamed Rifkan, specializing in innovative software solutions, web development, mobile applications, and cloud architecture.",
        "serviceArea": "Worldwide",
        "knowsAbout": [
            "Software Development",
            "Web Development", 
            "Mobile App Development",
            "Cloud Solutions",
            "Custom Software",
            "Digital Transformation"
        ]
    })} />

    <main class="bg-gradient-to-b from-[var(--color-primary-dark)] to-[#00151e]">
        <!-- Hero Section -->
        <section class="relative py-20 overflow-hidden" itemscope itemtype="https://schema.org/Person">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="max-w-3xl mx-auto text-center">
                    <h1 class="text-4xl md:text-5xl font-bold text-white mb-6" itemprop="name">
                        <span itemprop="givenName">Mohamed</span> <span itemprop="familyName">Rifkan</span> - 
                        <span class="text-[var(--color-primary)]">Founder of Debugro</span>
                    </h1>
                    <p class="text-xl text-gray-300 mb-8" itemprop="description">
                        <span itemprop="jobTitle">Founder & Lead Developer</span> at <span itemprop="worksFor" itemscope itemtype="https://schema.org/Organization"><span itemprop="name">Debugro</span></span>. 
                        Passionate full-stack developer with 5+ years of experience creating innovative
                        software solutions that drive business growth across Sri Lanka and globally.
                    </p>
                    <meta itemprop="image" content="https://avatars.githubusercontent.com/u/59793466?v=4" />
                    <meta itemprop="url" content="https://debugro.com/about" />
                    <meta itemprop="nationality" content="Sri Lankan" />
                </div>
            </div>
            <!-- Background Elements -->
            <div class="absolute top-0 left-1/4 w-64 h-64 bg-[var(--color-primary)]/10 rounded-full blur-3xl"></div>
            <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-[var(--color-primary)]/10 rounded-full blur-3xl"></div>
        </section>

        <!-- Story Section -->
        <section class="py-16">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="max-w-4xl mx-auto text-center">
                    <h2 class="text-3xl font-bold text-white mb-8">My Story</h2>
                    <div class="space-y-6 text-lg text-gray-300">
                        <p>
                            Founded in 2023, Debugro emerged from my passion to revolutionize
                            software development in Sri Lanka. My journey began with a simple
                            belief: that exceptional software should be accessible to businesses
                            of all sizes.
                        </p>
                        <p>
                            Today, I'm proud to be at the forefront of technological
                            innovation, helping businesses across the globe achieve their digital
                            transformation goals through personalized, high-quality solutions.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Mission & Vision -->
        <section class="py-16 bg-[var(--color-primary-dark)]/50">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid md:grid-cols-2 gap-12">
                    <div class="bg-[var(--color-primary-dark)]/80 p-8 rounded-2xl border border-[var(--color-primary-light-dark)]/30">
                        <h3 class="text-2xl font-bold text-white mb-4">My Mission</h3>
                        <p class="text-gray-300">
                            To empower businesses with innovative software solutions that drive
                            growth, efficiency, and digital transformation while maintaining the
                            highest standards of quality and security.
                        </p>
                    </div>
                    <div class="bg-[var(--color-primary-dark)]/80 p-8 rounded-2xl border border-[var(--color-primary-light-dark)]/30">
                        <h3 class="text-2xl font-bold text-white mb-4">My Vision</h3>
                        <p class="text-gray-300">
                            To become a leading software development partner in Sri Lanka,
                            recognized globally for innovative solutions, technical
                            excellence, and commitment to client success.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Values Section -->
        <section class="py-16">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <h2 class="text-3xl font-bold text-white text-center mb-12">My Values</h2>
                <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    {values.map(value => (
                        <div class="bg-[var(--color-primary-dark)]/80 p-6 rounded-xl border border-[var(--color-primary-light-dark)]/30 text-center">
                            <div class="text-4xl mb-4">{value.icon}</div>
                            <h3 class="text-xl font-bold text-white mb-2">{value.title}</h3>
                            <p class="text-gray-300">{value.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Team Section -->
        <section class="py-16 bg-[var(--color-primary-dark)]/50">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <h2 class="text-3xl font-bold text-white text-center mb-12">Meet the Founder</h2>
                <div class="flex justify-center">
                    <div class="max-w-md">
                    {team.map(member => (
                        <article class="bg-[var(--color-primary-dark)]/80 rounded-xl overflow-hidden border border-[var(--color-primary-light-dark)]/30 group" 
                                 itemscope itemtype="https://schema.org/Person">
                            <div class="aspect-square overflow-hidden">
                                <img
                                    src={member.image}
                                    alt={`${member.name} - ${member.role} at Debugro, Software Developer from Sri Lanka`}
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                    itemprop="image"
                                    loading="lazy"
                                    width="400"
                                    height="400"
                                />
                            </div>
                            <div class="p-6">
                                <h3 class="text-xl font-bold text-white mb-1" itemprop="name">{member.name}</h3>
                                <p class="text-[var(--color-primary)] mb-4" itemprop="jobTitle">{member.role}</p>
                                <p class="text-gray-300 mb-4" itemprop="description">{member.bio}</p>
                                <div class="flex flex-wrap gap-2 mb-6">
                                    {member.skills.map(skill => (
                                        <span class="px-3 py-1 bg-[var(--color-primary)]/10 text-[var(--color-primary-light)] rounded-full text-sm" itemprop="knowsAbout">
                                            {skill}
                                        </span>
                                    ))}
                                </div>
                                <div class="flex gap-4">
                                    <a href={member.social.linkedin}
                                        class="text-gray-400 hover:text-[var(--color-primary)] transition-colors"
                                        target="_blank" rel="noopener noreferrer"
                                        itemprop="sameAs"
                                        aria-label={`${member.name} LinkedIn Profile`}>
                                        <span class="sr-only">LinkedIn</span>
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                        </svg>
                                    </a>
                                    <a href={member.social.github}
                                        class="text-gray-400 hover:text-[var(--color-primary)] transition-colors"
                                        target="_blank" rel="noopener noreferrer"
                                        itemprop="sameAs"
                                        aria-label={`${member.name} GitHub Profile`}>
                                        <span class="sr-only">GitHub</span>
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                            <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
                                        </svg>
                                    </a>
                                    <a href={member.social.twitter}
                                        class="text-gray-400 hover:text-[var(--color-primary)] transition-colors"
                                        target="_blank" rel="noopener noreferrer"
                                        itemprop="sameAs"
                                        aria-label={`${member.name} Twitter Profile`}>
                                        <span class="sr-only">Twitter</span>
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                                        </svg>
                                    </a>
                                </div>
                                
                                <!-- Hidden metadata for SEO -->
                                <meta itemprop="url" content="https://debugro.com/about" />
                                <meta itemprop="nationality" content="Sri Lankan" />
                                <div itemprop="worksFor" itemscope itemtype="https://schema.org/Organization" style="display: none;">
                                    <meta itemprop="name" content="Debugro" />
                                    <meta itemprop="url" content="https://debugro.com" />
                                </div>
                            </div>
                        </article>
                    ))}
                </div>
            </div>
        </section>

        <!-- Development Approach -->
        <section class="py-16">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <h2 class="text-3xl font-bold text-white text-center mb-12">My Approach</h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                    <div class="bg-[var(--color-primary-dark)]/80 p-6 rounded-xl border border-[var(--color-primary-light-dark)]/30">
                        <div class="text-[var(--color-primary)] text-2xl font-bold mb-4">01</div>
                        <h3 class="text-xl font-bold text-white mb-3">Discovery</h3>
                        <p class="text-gray-300">Understanding your needs and objectives through in-depth consultation.</p>
                    </div>
                    <div class="bg-[var(--color-primary-dark)]/80 p-6 rounded-xl border border-[var(--color-primary-light-dark)]/30">
                        <div class="text-[var(--color-primary)] text-2xl font-bold mb-4">02</div>
                        <h3 class="text-xl font-bold text-white mb-3">Planning</h3>
                        <p class="text-gray-300">Developing a comprehensive strategy and technical roadmap.</p>
                    </div>
                    <div class="bg-[var(--color-primary-dark)]/80 p-6 rounded-xl border border-[var(--color-primary-light-dark)]/30">
                        <div class="text-[var(--color-primary)] text-2xl font-bold mb-4">03</div>
                        <h3 class="text-xl font-bold text-white mb-3">Development</h3>
                        <p class="text-gray-300">Agile development with regular updates and iterations.</p>
                    </div>
                    <div class="bg-[var(--color-primary-dark)]/80 p-6 rounded-xl border border-[var(--color-primary-light-dark)]/30">
                        <div class="text-[var(--color-primary)] text-2xl font-bold mb-4">04</div>
                        <h3 class="text-xl font-bold text-white mb-3">Delivery</h3>
                        <p class="text-gray-300">Thorough testing and smooth deployment with ongoing support.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Call to Action -->
        <section class="py-16">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="bg-[var(--color-primary-dark)]/80 rounded-3xl border-2 p-8 md:p-12 relative border-gradient-animated">
                    <div class="max-w-3xl mx-auto text-center">
                        <h2 class="text-3xl font-bold text-white mb-6">Ready to Transform Your Ideas into Reality?</h2>
                        <p class="text-gray-300 mb-8">
                            Let's discuss how I can help you achieve your digital transformation goals.
                        </p>
                        <a
                            href="/contact"
                            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)] text-white font-semibold rounded-xl hover:shadow-lg hover:shadow-[var(--color-primary)]/25 transition-all duration-300 group"
                        >
                            <span>Get in Touch</span>
                            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <style>
            @keyframes border-gradient {
                0% {
                    border-image: linear-gradient(0deg, var(--color-primary), var(--color-secondary), var(--color-primary)) 1;
                }
                25% {
                    border-image: linear-gradient(90deg, var(--color-primary), var(--color-secondary), var(--color-primary)) 1;
                }
                50% {
                    border-image: linear-gradient(180deg, var(--color-primary), var(--color-secondary), var(--color-primary)) 1;
                }
                75% {
                    border-image: linear-gradient(270deg, var(--color-primary), var(--color-secondary), var(--color-primary)) 1;
                }
                100% {
                    border-image: linear-gradient(360deg, var(--color-primary), var(--color-secondary), var(--color-primary)) 1;
                }
            }
            
            .border-gradient-animated {
                border-image: linear-gradient(0deg, var(--color-primary), var(--color-secondary), var(--color-primary)) 1;
                animation: border-gradient 2s linear infinite;
            }
        </style>


    </main>
</Layout>
