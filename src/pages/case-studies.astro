---
import Layout from '../layouts/Layout.astro';
import Card3D from '../components/ui/Card3D.astro';
import CardItem from '../components/ui/CardItem.astro';

// SEO metadata
const seoData = {
    title: "Case Studies - Debugro Software Solutions & Internal Projects",
    description: "Explore our software development projects including our internal social media post editor and upcoming client success stories. See how we build innovative solutions.",
    keywords: "case studies, software projects, social media editor, internal projects, Debugro development",
    canonicalUrl: "https://debugro.com/case-studies"
};

// Internal projects and case studies
const projects = [
    {
        title: "Social Media Post Editor",
        type: "Internal Project",
        status: "In Development",
        industry: "Social Media",
        image: "/images/projects/social-editor-mockup.jpg", // Placeholder image
        tags: ["React", "Design Tools", "Social Media", "Content Creation"],
        features: [
            { label: "Template Library", description: "Pre-designed templates" },
            { label: "Custom Graphics", description: "Built-in design tools" },
            { label: "Multi-Platform", description: "Export for all platforms" }
        ],
        excerpt: "An innovative social media post editor being developed internally at Debugro. This tool will help content creators and businesses design professional social media posts with ease.",
        progress: "75%",
        expectedLaunch: "Q1 2026"
    }
];
---

<Layout {...seoData}>
    <main class="relative min-h-screen overflow-hidden bg-gradient-to-b from-[var(--color-primary-dark)] to-[#00151e]">
        {/* Background Elements */}
        <div class="absolute inset-0 bg-[linear-gradient(rgba(var(--color-primary-rgb),0.03)_1px,transparent_1px),linear-gradient(to_right,rgba(var(--color-primary-rgb),0.03)_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_at_center,transparent_20%,black_70%)] animate-grid-flow"></div>

        {/* Gradient Orbs */}
        <div class="absolute top-[-20%] right-[-10%] w-[600px] h-[600px] rounded-full bg-gradient-to-br from-[var(--color-primary)]/20 to-transparent blur-3xl animate-float"></div>
        <div class="absolute bottom-[-10%] left-[-5%] w-[400px] h-[400px] rounded-full bg-gradient-to-tr from-[var(--color-primary-light)]/15 to-transparent blur-2xl animate-float-delayed"></div>

        {/* Content */}
        <div class="relative container mx-auto px-4 py-16 md:py-24 z-10">
            {/* Header */}
            <div class="text-center mb-16">
                <h1 class="text-4xl md:text-5xl font-bold text-[var(--color-primary-light)] mb-6">
                    Projects & Case Studies
                </h1>
                <p class="text-[var(--color-primary-light)]/80 text-lg max-w-2xl mx-auto">
                    Explore our current projects and upcoming success stories as we build innovative software solutions.
                </p>
            </div>

            {/* Projects Grid */}
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                {projects.map(project => (
                    <article class="group relative bg-[var(--color-primary-dark)]/50 backdrop-blur-md rounded-xl overflow-hidden border border-[var(--color-primary-light)]/10 hover:border-[var(--color-primary-light)]/20 transition-all duration-300">
                        <div class="aspect-w-16 aspect-h-9 relative overflow-hidden">
                            <div class="absolute inset-0 bg-gradient-to-t from-[var(--color-primary-dark)] to-transparent opacity-60 z-10"></div>
                            <div class="w-full h-48 bg-gradient-to-br from-[var(--color-primary)]/20 to-[var(--color-primary-light)]/10 flex items-center justify-center">
                                <div class="text-center">
                                    <div class="text-4xl mb-2">üé®</div>
                                    <div class="text-[var(--color-primary-light)] font-medium">Coming Soon</div>
                                </div>
                            </div>
                            <div class="absolute top-4 right-4 z-20">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-[var(--color-primary)]/20 backdrop-blur-sm text-[var(--color-primary-light)]">
                                    {project.status}
                                </span>
                            </div>
                            <div class="absolute bottom-4 left-4 z-20">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-[var(--color-secondary)]/20 backdrop-blur-sm text-[var(--color-secondary)]">
                                    {project.type}
                                </span>
                            </div>
                        </div>

                        <div class="p-6">
                            <h2 class="text-xl font-semibold text-[var(--color-primary-light)] mb-2">
                                {project.title}
                            </h2>
                            <p class="text-[var(--color-primary-light)]/70 text-sm mb-4">
                                {project.excerpt}
                            </p>

                            {/* Features */}
                            <div class="space-y-2 mb-4">
                                {project.features.map(feature => (
                                    <div class="flex items-center justify-between">
                                        <span class="text-[var(--color-primary)] font-medium text-sm">{feature.label}</span>
                                        <span class="text-[var(--color-primary-light)]/60 text-xs">{feature.description}</span>
                                    </div>
                                ))}
                            </div>

                            {/* Progress Bar */}
                            <div class="mb-4">
                                <div class="flex justify-between items-center mb-2">
                                    <span class="text-[var(--color-primary-light)]/70 text-sm">Development Progress</span>
                                    <span class="text-[var(--color-primary)] font-medium text-sm">{project.progress}</span>
                                </div>
                                <div class="w-full bg-[var(--color-primary-dark)] rounded-full h-2">
                                    <div class="bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)] h-2 rounded-full" style={`width: ${project.progress}`}></div>
                                </div>
                            </div>

                            {/* Tags */}
                            <div class="flex flex-wrap gap-2 mb-4">
                                {project.tags.map(tag => (
                                    <span class="text-xs px-2 py-1 rounded-md bg-[var(--color-primary-light)]/5 text-[var(--color-primary-light)]/70">
                                        {tag}
                                    </span>
                                ))}
                            </div>

                            {/* Expected Launch */}
                            <div class="text-center pt-4 border-t border-[var(--color-primary-light)]/10">
                                <span class="text-[var(--color-primary-light)]/60 text-xs">Expected Launch: </span>
                                <span class="text-[var(--color-primary)] font-medium text-sm">{project.expectedLaunch}</span>
                            </div>
                        </div>
                    </article>
                ))}
            </div>

            {/* Coming Soon Section */}
            <div class="mt-16">
                <div class="bg-[var(--color-primary-dark)]/30 backdrop-blur-md rounded-2xl border border-[var(--color-primary-light)]/10 p-8 text-center">
                    <h2 class="text-2xl font-bold text-[var(--color-primary-light)] mb-4">
                        More Case Studies Coming Soon
                    </h2>
                    <p class="text-[var(--color-primary-light)]/70 mb-6 max-w-2xl mx-auto">
                        We're currently working on exciting client projects that will be featured here soon. 
                        Stay tuned for detailed case studies showcasing our development expertise and client success stories.
                    </p>
                    <div class="flex flex-wrap justify-center gap-4 text-sm text-[var(--color-primary-light)]/60">
                        <span>üöÄ Web Applications</span>
                        <span>üì± Mobile Apps</span>
                        <span>‚òÅÔ∏è Cloud Solutions</span>
                        <span>üõí E-commerce Platforms</span>
                    </div>
                </div>
            </div>

            {/* CTA Section with 3D Effect */}
            <div class="mt-16 text-center">
                <Card3D 
                    class="inline-block p-8 rounded-2xl bg-[var(--color-primary-dark)]/50 backdrop-blur-md border-2"
                    glowIntensity="medium"
                >
                    <CardItem as="h2" translateZ={50} class="text-2xl md:text-3xl font-bold text-[var(--color-primary-light)] mb-4">
                        Ready to Start Your Project?
                    </CardItem>
                    <CardItem as="p" translateZ={30} class="text-[var(--color-primary-light)]/80 mb-6 max-w-2xl mx-auto">
                        Let's discuss how we can help transform your business with innovative software solutions like our upcoming projects.
                    </CardItem>
                    <CardItem as="a" translateZ={80}
                        href="/contact"
                        class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)] text-white font-semibold rounded-xl hover:shadow-lg hover:shadow-[var(--color-primary)]/25 transition-all duration-300 group"
                    >
                        <span>Get in Touch</span>
                        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                    </CardItem>
                </Card3D>
            </div>
        </div>
    </main>
</Layout>

<style>
    /* Optional: Add hover effect for project cards */
    article {
        transform: translateY(0);
        transition: transform 0.3s ease;
    }
    
    article:hover {
        transform: translateY(-4px);
    }
</style>
