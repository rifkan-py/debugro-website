---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

interface SEOData {
    title: string;
    description: string;
    keywords: string;
    canonicalUrl: string;
}

interface BlogPost extends CollectionEntry<'blogs'> {
    data: {
        title: string;
        description?: string;
        pubDate: Date;
        author: string;
        authorRole?: string;
        authorAvatar?: string;
        image?: string;
        tags: string[];
        featured?: boolean;
        readTime?: string;
    };
}

// Get all blog posts
const allPosts: BlogPost[] = await getCollection('blogs');

// Sort posts by date (newest first)
const sortedPosts: BlogPost[] = allPosts.sort((a: BlogPost, b: BlogPost) => 
    new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

// Get featured post (first one) and other posts
const featuredPost: BlogPost | undefined = sortedPosts.find((post: BlogPost) => post.data.featured) || sortedPosts[0];
const regularPosts: BlogPost[] = sortedPosts.filter((post: BlogPost) => post !== featuredPost);

const seoData: SEOData = {
    title: "Debugro Blog - Insights on Software Development & Technology",
    description: "Stay updated with the latest in software development, cloud computing, mobile development, and technology trends.",
    keywords: "software development blog, tech blog, programming tutorials, cloud computing, mobile development, web development",
    canonicalUrl: "https://debugro.com/blogs"
};

// Format date function
const formatDate = (date: string | Date): string => {
    const dateObj: Date = typeof date === 'string' ? new Date(date) : date;
    return dateObj.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    });
};
---

<Layout {...seoData}>
    <main class="py-16 lg:py-20 bg-gradient-to-b from-[var(--color-primary-dark)] to-[#00151e]">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Page Header -->
            <div class="text-center mb-16">
                <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Our Blog</h1>
                <p class="text-gray-300 text-lg max-w-2xl mx-auto">
                    Insights and updates from our team of experts on software development,
                    technology trends, and industry best practices.
                </p>
            </div>

            <!-- Featured Post -->
            {featuredPost && (
                <div class="mb-16">
                    <a href={`/blogs/${featuredPost.slug}`} class="group block">
                        <div class="relative rounded-2xl overflow-hidden bg-[var(--color-primary-dark)]/80 border border-[var(--color-primary-light-dark)]/30">
                            <div class="aspect-video">
                                {featuredPost.data.image && (
                                    <img 
                                        src={featuredPost.data.image} 
                                        alt={featuredPost.data.title}
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                    />
                                )}
                            </div>
                            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
                            <div class="absolute bottom-0 p-6 sm:p-8">
                                <div class="flex items-center gap-4 mb-4">
                                    <span class="px-3 py-1 rounded-full bg-[var(--color-primary)]/20 text-[var(--color-primary-light)] text-sm font-medium">
                                        Featured
                                    </span>
                                    <span class="text-gray-300 text-sm">
                                        {formatDate(featuredPost.data.pubDate)}
                                    </span>
                                </div>
                                <h2 class="text-2xl sm:text-3xl font-bold text-white mb-3 group-hover:text-[var(--color-primary)] transition-colors">
                                    {featuredPost.data.title}
                                </h2>
                                {featuredPost.data.description && (
                                    <p class="text-gray-300 mb-4 line-clamp-2">
                                        {featuredPost.data.description}
                                    </p>
                                )}
                                <div class="flex items-center gap-4">
                                    {featuredPost.data.authorAvatar && (
                                        <img 
                                            src={featuredPost.data.authorAvatar} 
                                            alt={featuredPost.data.author}
                                            class="w-10 h-10 rounded-full"
                                        />
                                    )}
                                    <div>
                                        {featuredPost.data.author && (
                                            <div class="text-white font-medium">
                                                {featuredPost.data.author}
                                            </div>
                                        )}
                                        {featuredPost.data.authorRole && (
                                            <div class="text-gray-400 text-sm">
                                                {featuredPost.data.authorRole}
                                            </div>
                                        )}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            )}

            <!-- Regular Posts Grid -->
            {regularPosts.length > 0 && (
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {regularPosts.map((post: BlogPost) => (
                        <article class="bg-[var(--color-primary-dark)]/80 rounded-xl overflow-hidden border border-[var(--color-primary-light-dark)]/30 group">
                            <a href={`/blogs/${post.slug}`} class="block">
                                <div class="aspect-video overflow-hidden">
                                    {post.data.image && (
                                        <img 
                                            src={post.data.image} 
                                            alt={post.data.title}
                                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                        />
                                    )}
                                </div>
                                <div class="p-6">
                                    <div class="flex items-center gap-4 mb-4">
                                        <div class="flex gap-2">
                                            {post.data.tags && post.data.tags.slice(0, 2).map((tag: string, i: number) => (
                                                <span class="px-2 py-1 rounded-full bg-[var(--color-primary)]/10 text-[var(--color-primary-light)] text-xs font-medium">
                                                    {tag}
                                                </span>
                                            ))}
                                        </div>
                                        <span class="text-gray-400 text-sm">
                                            {formatDate(post.data.pubDate)}
                                        </span>
                                    </div>
                                    <h3 class="text-xl font-bold text-white mb-2 group-hover:text-[var(--color-primary)] transition-colors">
                                        {post.data.title}
                                    </h3>
                                    {post.data.description && (
                                        <p class="text-gray-300 mb-4 line-clamp-2">
                                            {post.data.description}
                                        </p>
                                    )}
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center gap-3">
                                            {post.data.authorAvatar && (
                                                <img 
                                                    src={post.data.authorAvatar} 
                                                    alt={post.data.author}
                                                    class="w-8 h-8 rounded-full"
                                                />
                                            )}
                                            {post.data.author && (
                                                <span class="text-gray-300 text-sm">
                                                    {post.data.author}
                                                </span>
                                            )}
                                        </div>
                                        {post.data.readTime && (
                                            <span class="text-gray-400 text-sm">
                                                {post.data.readTime}
                                            </span>
                                        )}
                                    </div>
                                </div>
                            </a>
                        </article>
                    ))}
                </div>
            )}

            <!-- No posts message -->
            {allPosts.length === 0 && (
                <div class="text-center py-16">
                    <p class="text-gray-400 text-lg">No blog posts found.</p>
                </div>
            )}
        </div>
    </main>
</Layout>